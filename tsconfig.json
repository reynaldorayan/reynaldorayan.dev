{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "jsx": "react-jsx",
        "lib": ["ES2017", "ES2021", "DOM", "ES6", "WebWorker"],
        "noImplicitAny": true,
        "strictNullChecks": true,
        "noImplicitThis": true,
        "noImplicitReturns": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "sourceMap": true,
        "allowJs": true,
        "moduleResolution": "node",
        "baseUrl": ".",
        "paths": {
            "@/*": ["resources/ts/*"]
        },
        "types": ["vite/client"]
    },
    "include": [
        "resources/ts/**/*.ts",
        "resources/ts/**/*.tsx",
        "resources/ts/**/*.d.ts"
    ],
    "exclude": ["node_modules"]
}
